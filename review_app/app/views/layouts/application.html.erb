<!DOCTYPE html>
<html>
  <head>
    <title>ReviewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="intro" class="container">
   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h1 class="my-0 mr-md-auto font-weight-normal">Electronic Review</h1>
      <nav class="my-2 my-md-0 mr-md-3">
        <% if current_user %>
        <a class="p-2 text-dark" href="#">
            <%= link_to current_user.userid, profiles_show_path(:id => current_user.id) %>
          </a>
          <a class="p-2 text-dark" href="#">
            <%= link_to 'Log out', session_path('active'), method: :delete %>
          </a>
          <a class ="p-2 text-dark" href="#"><%= link_to 'Products', products_index_path %></a>
          <a class ="p-2 text-dark" href="#"><%= link_to 'Review', reviews_path %></a>
          <% else %>
          <a class="p-2 text-dark" href="#">
            <%= link_to 'Log in', new_session_path, class: "active_nav_link" %>
            <a class ="p-2 text-dark" href="#"><%= link_to 'Create Account', new_user_path %></a>
          </a>
        <% end %>
        <a class ="p-2 text-dark" color="black" href="#"><%= link_to 'Home', root_path %></a>
        <a class ="p-2 text-dark" href="#"><%= link_to 'About', static_pages_about_path %></a>
        <a class ="p-2 text-dark" href="#"><%= link_to 'Contact', static_pages_contact_path %></a>
    </div>

    <% if current_user %>
    <div align="center">
      <%= form_tag search_products_path, method: :get do %>
      <%= text_field_tag :term, nil, placeholder: 'Search for a product to review', class:'form-control' %>
      <button type="button" class="btn btn-light"><%= submit_tag "Search", class:'btn btn-default' %></button>
    <% end %>
    </div>
    <% else %>
    <% end %>

    <div class="notices">
      <% if alert %><%= alert %><% end %>
      <% if notice %><%= notice %><% end %>
    </div>
    <%= yield %>
  </div>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>ReviewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="intro" class="container">
   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h1 class="my-0 mr-md-auto font-weight-normal">Electronic Review</h1>
      <nav class="my-2 my-md-0 mr-md-3">
        <% if current_user %>
        <a class="p-2 text-dark" href="#">
          <%= link_to current_user.userid, controller: "profiles", action: "show", id: current_user.id, class: 'btn btn-warning' %>
          </a>
          <%= link_to 'Log out', session_path('active'), method: :delete, class: 'btn btn-warning' %>
          <%= link_to 'Products', products_index_path, class: 'btn btn-warning' %></a>
          <%= link_to 'Reviews', reviews_path, class: 'btn btn-warning' %></a>
          <% else %>
          <a class="p-2 text-dark" href="#">
            <%= link_to 'Log in', new_session_path, class: "active_nav_link", class: 'btn btn-warning' %>
            <%= link_to 'Create Account', new_user_path, class: 'btn btn-warning' %></a>
          </a>
        <% end %>
        <%= link_to 'Home', root_path, class: 'btn btn-warning' %></a>
        <%= link_to 'About', static_pages_about_path, class: 'btn btn-warning' %></a>
        <%= link_to 'Contact', contacts_path, class: 'btn btn-warning' %></a>
    </div>

    <% if current_user %>
    <div align="center">
      <%= form_tag search_products_path, method: :get do %>
      <%= text_field_tag :term, nil, placeholder: 'Search for a product to review', class:'form-control' %>
    <% end %>
    </div>
    <% else %>
    <% end %>

    <div class="notices">
      <% if alert %><%= alert %><% end %>
      <% if notice %><%= notice %><% end %>
    </div>
    <%= yield %>
  </div>
  </body>
</html>

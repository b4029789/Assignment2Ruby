<div class="container">
	<h2>Please log in</h2>

<%= form_tag sessions_path do %>

<%= text_field_tag :userid, nil, placeholder: 'Enter your username', class: 'form-control' %> 
<br />
<%= password_field_tag :password, nil, placeholder: 'Enter your password', class: 'form-control' %> 
<br />
<%= submit_tag 'Log in', class:'btn btn-light' %>

<% end %>

</div>